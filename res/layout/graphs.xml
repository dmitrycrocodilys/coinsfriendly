<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#ffffff">
    <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="20">
        <Space
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="5"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="fill_parent" android:layout_weight="40">
            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:id="@+id/imageView" android:src="@drawable/logo" android:layout_weight="22"
                    />
            <Space
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="9"/>
            <WebView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:id="@+id/graphsWebView" android:layout_weight="90"/>

        </LinearLayout>
        <Space
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="5"/>
    </LinearLayout>
    <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
</LinearLayout>

