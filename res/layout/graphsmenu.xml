<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#ffffff">
    <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="20">
        <Space
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="5"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="fill_parent" android:layout_weight="40">
            <include layout="@layout/logo" android:layout_width="fill_parent" android:layout_height="0dp"
                     android:layout_weight="10"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp" android:layout_weight="45">
                <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:id="@+id/imageView3" android:src="@drawable/line2"
                        android:layout_weight="3"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                              android:layout_height="0dp" android:layout_weight="7"
                              android:id="@+id/menuitem2" android:onClick="item2Clicked">
                    <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                               android:id="@+id/imageView4" android:src="@drawable/menuitem_2" android:layout_row="0"
                               android:layout_column="0" android:layout_gravity="center_vertical"
                               android:layout_weight="10"/>
                    <Space android:layout_width="0dp" android:layout_height="fill_parent"
                           android:layout_weight="3"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                              android:text="FREE VERSION" android:id="@+id/textView" android:layout_row="0"
                              android:layout_column="1" android:textColor="#f66c3d"
                              android:layout_gravity="center_vertical" android:layout_weight="30"
                              android:singleLine="false" android:textSize="20sp"/>
                </LinearLayout>
                <ImageView android:layout_width="fill_parent" android:layout_height="0dp"
                           android:id="@+id/imageView2" android:src="@drawable/line2"
                           android:layout_weight="3"
                           android:layout_gravity="center_horizontal"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                              android:layout_height="0dp" android:layout_weight="7"
                              android:id="@+id/menuitem1" android:onClick="item1Clicked">
                    <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                               android:id="@+id/imageView9" android:src="@drawable/menuitem_1" android:layout_row="0"
                               android:layout_column="0" android:layout_gravity="center_vertical"
                               android:layout_weight="10"/>
                    <Space android:layout_width="0dp" android:layout_height="fill_parent"
                           android:layout_weight="3"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                              android:id="@+id/textView4" android:layout_row="0"
                              android:layout_column="1" android:textColor="#f66c3d"
                              android:layout_gravity="center_vertical" android:layout_weight="30"
                              android:text="FULL VERSION" android:singleLine="false" android:textSize="20sp"
                              android:textIsSelectable="false"/>
                </LinearLayout>
                <ImageView android:layout_width="fill_parent" android:layout_height="0dp"
                           android:id="@+id/imageView7" android:src="@drawable/line2"
                           android:layout_weight="3"
                           android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
        <Space
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="5"/>
    </LinearLayout>
    <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
</LinearLayout>

