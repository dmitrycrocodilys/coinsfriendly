<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#ffffff">
    <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="20">
        <Space
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="5"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="fill_parent" android:layout_weight="40">
            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:id="@+id/imageView" android:src="@drawable/logo" android:layout_weight="10"
                    />
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp" android:layout_weight="45">
                <Space android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="10"
                       android:id="@+id/space4"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp" android:layout_weight="15">

                    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                                  android:layout_height="fill_parent"
                                  android:id="@+id/menuitem1" android:onClick="item1Clicked">
                        <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                                   android:id="@+id/imageView9" android:src="@drawable/btc_icon" android:layout_row="0"
                                   android:layout_column="0" android:layout_gravity="center_vertical"
                                   android:layout_weight="10"/>
                        <Space android:layout_width="0dp" android:layout_height="fill_parent"
                               android:layout_weight="1"/>
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                                  android:text="@string/menuitemtext1" android:id="@+id/textView4" android:layout_row="0"
                                  android:layout_column="1" android:textColor="#f66c3d"
                                  android:layout_gravity="center_vertical" android:layout_weight="20"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView android:layout_width="fill_parent" android:layout_height="0dp"
                           android:id="@+id/imageView2" android:src="@drawable/line2" android:layout_weight="3"
                           android:layout_gravity="center_horizontal"/>
                <Space
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"/>
                <Button
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:text="SCAN BAR CODE"
                        android:id="@+id/button" android:background="#f66c3d" android:layout_weight="15"/>
                <Space android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="10"
                       android:id="@+id/space"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp" android:layout_weight="25">
                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Name"
                            android:id="@+id/textView" android:textColor="#000000" android:layout_weight="20"/>
                    <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:id="@+id/editText" android:background="#bababa" android:layout_weight="21"/>
                </LinearLayout>
                <Space android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="10"
                       android:id="@+id/space2"/>
                <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                              android:layout_height="0dp" android:id="@+id/linearLayout" android:layout_weight="35">
                    <TextView android:layout_width="fill_parent" android:layout_height="0dp"
                              android:textAppearance="?android:attr/textAppearanceSmall" android:text="Description"
                              android:id="@+id/textView2" android:textColor="#000000" android:layout_weight="3"/>
                    <EditText android:layout_width="fill_parent" android:layout_height="0dp"
                              android:inputType="textPersonName" android:ems="10" android:id="@+id/editText2"
                              android:background="#bababa" android:layout_weight="5"/>
                </LinearLayout>
                <Space android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="10"
                       android:id="@+id/space3"/>
                <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                              android:layout_height="0dp" android:id="@+id/linearLayout2"
                              android:layout_weight="25">
                    <TextView android:layout_width="wrap_content" android:layout_height="0dp"
                              android:textAppearance="?android:attr/textAppearanceSmall"
                              android:id="@+id/textView3" android:textColor="#000000" android:singleLine="false"
                              android:text="Pirce (USD)" android:layout_weight="20"/>
                    <EditText android:layout_width="fill_parent" android:layout_height="0dp"
                              android:inputType="textPersonName" android:ems="10" android:id="@+id/editText3"
                              android:background="#bababa" android:layout_weight="21"/>
                </LinearLayout>
                <Space android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="10"
                       android:id="@+id/space5"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                              android:layout_height="0dp" android:id="@+id/linearLayout3" android:layout_weight="15">
                    <Space
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="5"/>
                    <Button
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:text="GENERATE INVOICE"
                            android:id="@+id/button2" android:layout_weight="5" android:background="#f66c3d"
                            android:textSize="12dp"/>
                </LinearLayout>
                <Space
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"/>
            </LinearLayout>
        </LinearLayout>
        <Space
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="5"/>
    </LinearLayout>
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/imageView3" android:layout_weight="1" android:src="@drawable/bottom"
            android:background="#f66c3d"/>
</LinearLayout>

