<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#ffffff">
    <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="20">
        <Space
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="5"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="fill_parent" android:layout_weight="40">
            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:id="@+id/imageView" android:src="@drawable/logo" android:layout_weight="10"
                    />
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp" android:layout_weight="45">
                <Space android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="5"
                       android:id="@+id/space4"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp" android:layout_weight="10">

                    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                                  android:layout_height="fill_parent"
                                  android:id="@+id/menuitem1" android:onClick="item1Clicked">
                        <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                                   android:id="@+id/imageView9" android:src="@drawable/link" android:layout_row="0"
                                   android:layout_column="0" android:layout_gravity="center_vertical"
                                   android:layout_weight="10"/>
                        <Space android:layout_width="0dp" android:layout_height="fill_parent"
                               android:layout_weight="1"/>
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                                  android:text="@string/menuitemtext2" android:id="@+id/textView4" android:layout_row="0"
                                  android:layout_column="1" android:textColor="#f66c3d"
                                  android:layout_gravity="center_vertical" android:layout_weight="20"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView android:layout_width="fill_parent" android:layout_height="0dp" android:id="@+id/imageView4"
                           android:src="@drawable/line2" android:layout_weight="3"
                           android:layout_gravity="center_horizontal"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                              android:layout_height="0dp" android:layout_weight="10" android:id="@+id/linearLayout">
                    <TextView android:layout_width="0dp" android:layout_height="fill_parent"
                              android:textAppearance="?android:attr/textAppearanceSmall" android:text="June 11, 2:30pm"
                              android:id="@+id/textView5" android:layout_weight="5"
                              android:gravity="center_vertical" android:textColor="#000000"/>
                    <TextView android:layout_width="0dp" android:layout_height="fill_parent"
                              android:textAppearance="?android:attr/textAppearanceSmall" android:text="Large Pepperoni"
                              android:id="@+id/textView6" android:gravity="center_vertical|center_horizontal"
                              android:layout_weight="7" android:textColor="#878787"/>
                    <TextView android:layout_width="0dp" android:layout_height="fill_parent"
                              android:textAppearance="?android:attr/textAppearanceSmall" android:text="$12.99"
                              android:id="@+id/textView7" android:layout_weight="3"
                              android:gravity="center_vertical|center_horizontal" android:textColor="#878787"/>
                    <ImageButton android:layout_width="0dp" android:layout_height="fill_parent"
                                 android:id="@+id/imageButton2" android:layout_weight="2" android:src="@drawable/tx_open"
                                 android:background="#ffffff"/>
                </LinearLayout>
                <ImageView android:layout_width="fill_parent" android:layout_height="0dp" android:id="@+id/imageView5"
                           android:src="@drawable/line2" android:layout_weight="3"
                           android:layout_gravity="center_horizontal"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                              android:layout_height="0dp" android:layout_weight="10" android:id="@+id/linearLayout2">
                    <TextView android:layout_width="0dp" android:layout_height="fill_parent"
                              android:textAppearance="?android:attr/textAppearanceSmall" android:text="June 11, 2:30pm"
                              android:id="@+id/textView8" android:layout_weight="5"
                              android:gravity="center_vertical" android:textColor="#000000"/>
                    <TextView android:layout_width="0dp" android:layout_height="fill_parent"
                              android:textAppearance="?android:attr/textAppearanceSmall" android:text="Large Pepperoni"
                              android:id="@+id/textView9" android:gravity="center_vertical|center_horizontal"
                              android:layout_weight="7" android:textColor="#878787"/>
                    <TextView android:layout_width="0dp" android:layout_height="fill_parent"
                              android:textAppearance="?android:attr/textAppearanceSmall" android:text="$12.99"
                              android:id="@+id/textView10" android:layout_weight="3"
                              android:gravity="center_vertical|center_horizontal" android:textColor="#878787"/>
                    <ImageButton android:layout_width="0dp" android:layout_height="fill_parent"
                                 android:id="@+id/imageButton3" android:layout_weight="2"
                                 android:src="@drawable/tx_open" android:background="#ffffff"/>
                </LinearLayout>
                <ImageView android:layout_width="fill_parent" android:layout_height="0dp" android:id="@+id/imageView6"
                           android:src="@drawable/line2" android:layout_weight="3"
                           android:layout_gravity="center_horizontal"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                              android:layout_height="0dp" android:layout_weight="10" android:id="@+id/linearLayout3">
                    <TextView android:layout_width="0dp" android:layout_height="fill_parent"
                              android:textAppearance="?android:attr/textAppearanceSmall" android:text="June 11, 2:30pm"
                              android:id="@+id/textView11" android:layout_weight="5"
                              android:gravity="center_vertical" android:textColor="#000000"/>
                    <Space
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="10"/>
                    <ImageButton android:layout_width="0dp" android:layout_height="fill_parent"
                                 android:id="@+id/imageButton4" android:layout_weight="2"
                                 android:src="@drawable/tx_close" android:background="#ffffff"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                              android:layout_height="0dp" android:id="@+id/linearLayout4" android:layout_weight="30">
                    <TextView android:layout_width="fill_parent" android:layout_height="0dp"
                              android:textAppearance="?android:attr/textAppearanceSmall" android:text="Golden Gate Special Pizza"
                              android:id="@+id/textView12" android:gravity="center_vertical"
                              android:layout_weight="4" android:textColor="#878787"/>
                    <TextView android:layout_width="fill_parent" android:layout_height="0dp"
                              android:textAppearance="?android:attr/textAppearanceSmall" android:text="$12.99"
                              android:id="@+id/textView13" android:layout_weight="4"
                              android:gravity="center_vertical" android:textColor="#878787"/>
                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Lorem ipsum dolor sit amet, conse ctetuer adipiscing elit."
                            android:id="@+id/textView15" android:layout_weight="15" android:textStyle="italic"
                            android:singleLine="true"/>
                </LinearLayout>
                <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:id="@+id/imageView7" android:layout_weight="10"
                        android:src="@drawable/tx_history_pages" android:scaleType="fitStart"/>
                <Space
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"/>
            </LinearLayout>
        </LinearLayout>
        <Space
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="5"/>
    </LinearLayout>
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/imageView3" android:layout_weight="1" android:src="@drawable/bottom"
            android:background="#f66c3d"/>
</LinearLayout>

